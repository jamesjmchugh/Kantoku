<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/gofun">

    <!-- Header with vertical accent -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <!-- Vertical kanji accent -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="監督"
            android:textSize="12sp"
            android:fontFamily="serif"
            android:textColor="@color/hai"
            android:letterSpacing="0.2"
            android:rotation="-90"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kantoku"
            style="@style/Kantoku.Heading.Medium" />
    </LinearLayout>

    <!-- Task Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/gofun_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task"
                style="@style/Kantoku.Heading.Small"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe what should be done..."
                app:boxStrokeColor="@color/indigo"
                app:hintTextColor="@color/hai"
                app:boxCornerRadiusTopStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusBottomEnd="4dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/sumi"
                    android:lineSpacingMultiplier="1.3" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Duration Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/gofun_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                style="@style/Kantoku.Heading.Small"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/rgDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb2min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 minutes"
                    android:padding="12dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/sumi_light"
                    android:buttonTint="@color/indigo" />

                <RadioButton
                    android:id="@+id/rb5min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 minutes"
                    android:padding="12dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/sumi_light"
                    android:buttonTint="@color/indigo"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb10min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 minutes"
                    android:padding="12dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/sumi_light"
                    android:buttonTint="@color/indigo" />

                <RadioButton
                    android:id="@+id/rb30min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 minutes"
                    android:padding="12dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/sumi_light"
                    android:buttonTint="@color/indigo" />

            </RadioGroup>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bluetooth Status -->
    <TextView
        android:id="@+id/tvBluetoothStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not connected"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/hai"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Connect"
            android:layout_marginEnd="8dp"
            android:textColor="@color/indigo"
            app:strokeColor="@color/indigo"
            app:cornerRadius="4dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Begin"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/indigo"
            android:textColor="@color/shironeri"
            app:cornerRadius="4dp" />

    </LinearLayout>

</LinearLayout>
